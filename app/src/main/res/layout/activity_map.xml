<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <fragment
        android:id="@+id/mapFragment"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@+id/bottomBar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
         />

    <RelativeLayout
        android:id="@+id/bottomBar"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:background="#EEEEEE"

        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent">






        <TextView
            android:id="@+id/lotLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="5sp"
            android:layout_marginTop="10sp"
            android:text="Lot Name:"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Back"
            android:id="@+id/mapBack"

            android:layout_alignParentRight="true"/>

        <TextView
            android:id="@+id/lotName"
            android:textColor="@color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/lotLabel"
            android:layout_marginLeft="5dp"

            android:layout_marginTop="30dp"
            android:hint="Title" />


        <ProgressBar
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_alignParentBottom="true"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_marginBottom="10dp"
            android:progressTint="#00AAFF"
            android:id="@+id/progressBar"
            android:progress="0"
            android:background="#7B56BAB4"
            />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:id="@+id/spotsSpace"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="100dp"
            >



        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_centerHorizontal="true" >   
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Spots Taken: "
            android:id="@+id/takenLabel"
            android:textSize="22sp"
            android:textColor="@color/black"
            android:layout_centerHorizontal="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/takenSpots"
                android:textColor="@color/black"
                android:textSize="22sp"/>
            
        </LinearLayout>
            
            <Space
                android:layout_width="wrap_content"
                android:layout_height="40sp" />
            
            
            
            
            
         <LinearLayout
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:orientation="horizontal"
             android:layout_centerHorizontal="true" >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Maximum Spots: "
            android:textSize="22sp"
            android:id="@+id/maxLabel"
            android:textColor="@color/black"
            android:layout_toRightOf="@id/takenLabel" />
            
            
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/maxSpots"
                android:textColor="@color/black"
                android:textSize="22sp"/>

            
        </LinearLayout>

        
        
        
        
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="220dp">
        <Button
            android:id="@+id/addCar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Add Car"
            android:visibility="invisible"/>
            <Space
                android:layout_width="60dp"
                android:layout_height="wrap_content" />

        <Button
            android:id="@+id/removeCar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Remove Car"
            android:visibility="invisible"/>


        </LinearLayout>




    </RelativeLayout>


</androidx.constraintlayout.widget.ConstraintLayout>